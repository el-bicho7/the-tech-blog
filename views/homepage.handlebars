<h1 class="title">Welcome to the Tech Blog</h1>
<div class="container">
  {{#each posts}} 
  <div class="post">
    <a class="text" href="/{{this.id}}/comment">
    <h2>{{this.title}}</h2>
    <div class="author-date">By {{this.user.name}} on {{this.date}}</div>
    <p>{{this.content}}</p>
    </a>
  </div> 
  {{/each}}
</div>